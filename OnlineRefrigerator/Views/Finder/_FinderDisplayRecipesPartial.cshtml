@model OnlineRefrigerator.Models.FinderViewModel

<div class="tableFixHead">
    <table class="table table-hover table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th id="Name" scope="col"><span class="text-nowrap">@Html.DisplayNameFor(model => model.Recipes[0].Name) </span></th>
                @*<i class="fas fa-sort"></i>*@
                <th id="PreparationTime" scope="col"><span class="text-nowrap">@Html.DisplayNameFor(model => model.Recipes[0].PreparationTime) </span></th>
                <th id="TypeId" scope="col"><span class="text-nowrap">@Html.DisplayNameFor(model => model.Recipes[0].Type) </span></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Recipes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PreparationTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type.Name)
                    </td>

                    <td>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                        @*<button type="button" class="btn btn-secondary">Secondary</button>*@
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


@section Scripts{
    <script src="~/js/finder-functions.js"></script>
    <script src="~/js/finder-display.js"></script>

}
