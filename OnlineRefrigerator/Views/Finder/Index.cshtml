                        <input type="checkbox" class="custom-control-input" id="customSwitch2">
                        <label class="custom-control-label" for="customSwitch2">Ignore Herbs</label>
                    </div>*@
                </div>
            </div>
        </div>

        <hr class="my-4">

        <div id="displayRecipes">

        </div>

    </form>
</div>


