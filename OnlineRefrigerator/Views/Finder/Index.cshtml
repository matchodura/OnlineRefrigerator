@{
    ViewData["Title"] = "Find Recipes";
}

<div class="jumbotron">
  <h1 class="display-3">@ViewData["Title"]</h1>
  <hr class="my-4">
  <form asp-action="Create" method="post">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <div id="inputIngredientsRow">
            <div class="input-group">
              <div class="input-group-append"></div>
            </div>
          </div>
          <div class="form-group" id="item-list-ingredients"></div>
            <div id="newIngredient"></div>
            <button id="addIngredient" type="button" class="btn btn-primary" style="margin-bottom:1rem">Add Ingredient</button>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="customSwitch1">
            <label class="custom-control-label" for="customSwitch1">Display recipes with missing ingredients</label>
          </div>
        </div>
      </div>
    </div>
    <hr class="my-4">
    <div id="displayRecipes"></div>
  </form>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/finder-ingredient-add.js"></script>
  
}