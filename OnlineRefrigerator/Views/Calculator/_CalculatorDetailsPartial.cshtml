                        <h5>@Html.DisplayNameFor(model => model.Ingredient.Protein)  <span id="Protein">@Html.DisplayFor(model => model.Ingredient.Protein)</span></h5>

                    <li class="list-group-item">
                        <h5>@Html.DisplayNameFor(model => model.Ingredient.Energy)  <span id="Energy">@Html.DisplayFor(model => model.Ingredient.Energy)</span></h5>
                    </li>


                </ul>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="@Model.ServingTypes" class="control-label"></label>
                    @Html.DropDownListFor(s => s.SelectedServing, Model.ServingTypes, htmlAttributes: new { @class = "form-control" })

                </div>

                <div class="form-group">
                    <label asp-for="@Model.ServingQuantity" class="control-label"></label>
                    <input asp-for="@Model.ServingQuantity" class="form-control" name="dupa" />
                    <span asp-validation-for="@Model.ServingQuantity" class="text-danger"></span>
                </div>

                <div class="card-body">
                    <div id="renderResults"></div>
                 
                </div>
            </div>

    
    </div>
