@model OnlineRefrigerator.Models.Ingredients
@{
    ViewData["Title"] = "Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1 class="display-3">@ViewData["Title"]</h1>
    <hr class="my-4">
    <form>
        <div class="column">
            @using (Html.BeginForm(new { @id = "modelForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <div class="form-group">

                        <div class="col-md-12">

                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Write ingredient name" } } ) 

                        </div>
                    </div>

                </div>
            }

            <div class="row">
                <div id="renderDetails">
                </div>
            </div>


            <div class="col-md-3">
                <div id="renderResults">
                </div>
            </div>


        </div>
    </form>


    @section Scripts{

        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/js/calculator-autocomplete.js"></script>
        <script src="~/js/calculator-results-display.js"></script>


    }


</div>
