@model OnlineRefrigerator.Models.Ingredients


<div>
    <h4>Ingredients</h4>
    <hr />
    <div class="row">
        <div class="coumn col-md-6">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Fat)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fat)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Carbs)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Carbs)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Protein)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Protein)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Energy)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Energy)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Serving)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Serving.ServingType)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ServingValue)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ServingValue)
                </dd>
            </dl>
        </div>
        <div class="coumn col-md-6">
            <div class="col-sm-10">
                <img class="ingredients-details-img" src="@Url.Action("GetImage", "Ingredients", new { id = Model.ImageId })" />
            </div>
        </div>

    </div>


</div>


@section Scripts{
    <script src="~/js/ingredients-display.js"></script>
}