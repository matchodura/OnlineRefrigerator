@*@model IEnumerable<OnlineRefrigerator.Models.Ingredients>*@
@model OnlineRefrigerator.Models.IngredientsCategoryViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Ingredients" asp-action="Index" method="get">
    <p>

        <select asp-for="IngredientCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].Fat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].Carbs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].Protein)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].Energy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ingredients) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carbs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Protein)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Energy)
            </td>
            <td>
                @if (this.User.Identity.IsAuthenticated)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }

                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 

            </td>
        </tr>
}
    </tbody>
</table>
