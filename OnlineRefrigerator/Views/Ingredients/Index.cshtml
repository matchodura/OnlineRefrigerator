@model OnlineRefrigerator.Models.IngredientsCategoryViewModel

@{
    ViewData["Title"] = "Search Ingredients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron">
  <h1 class="display-3">@ViewData["Title"]</h1>
  <hr class="my-4">
  <p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
  </p>
  <form>
    <div class="form-row">
      <div class="form-group col-md-6" style="margin-bottom:1rem">
            @*<label for="Category">Category</label>*@
            @* TODO: dodac opcje wyboru kategorii z bazy danych *@
        <select class="form-control" id="category">
          <option value="0">All</option>
          <option value="1">Uncatogarized</option>
          <option value="2">Vegetables</option>
          <option value="3">Fruits</option>
          <option value="6">Meat</option>
          <option value="7">Herbs</option>
        </select>
      </div>
      <div class="form-group col-md-6" style="margin-bottom:1rem">
        <input type="text" id="ingredient" placeholder="Write ingredient name" class="form-control">
      </div>
    </div>
  </form>
  @* Displaying ingrediens table as partial view via ajax and js script *@
  <div id="displayIngredients"> </div>
</div>

@section Scripts{

    <script src="~/js/ingredients-display.js"></script>
    <script src="~/js/ranking-voting.js"></script>
    <script src="~/js/functions.js"></script>

}
